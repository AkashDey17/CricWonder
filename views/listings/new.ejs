<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3>Create A New Listing</h3>
    <form
      method="POST"
      action="/listings"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          name="listing[title]"
          placeholder="Ground Name"
          type="text"
          class="form-control"
          required
        />
        <div class="valid-feedback">Title looks good!</div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          name="listing[description]"
          placeholder="Enter your description"
          class="form-control"
          required
        >
        </textarea>
      </div>

      <!-- <div class="mb-3">
        <label for="image" class="form-label">Image</label>
        <input
          name="listing[image]"
          placeholder="Enter your image/link"
          type="text"
          class="form-control"
        />
      </div> -->

      <div class="mb-3">
        <label for="image" class="form-label">Upload Listing Image</label>
        <input
          name="listing[image]"
          type="file"
          class="form-control"
          required
        />
      </div>

      <div class="row">
        <div class="col-md-4">
          <div class="mb-3">
            <label for="price" class="form-label">Price</label>
            <input
              name="listing[price]"
              placeholder="4000"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Price should be only numbers!</div>
          </div>
        </div>

        <div class="col-md-8">
          <div class="mb-3">
            <label for="country" class="form-label">Country</label>
            <input
              name="listing[country]"
              placeholder="Enter your Country"
              type="text"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Country shouble be there!</div>
          </div>
        </div>
      </div>

      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
          name="listing[location]"
          placeholder="Enter your state/region"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Location should be there!</div>
      </div>
      <br /><br />
      <button class="btn btn-danger mt-3">Submit</button>
    </form>
  </div>
</div>
